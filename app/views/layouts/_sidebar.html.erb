  <div class="sidebar-heading">Escambo House</div>
  <div class="list-group list-group-flush">
    <%= link_to "Página Inicial", authenticated_root_path, class: "list-group-item list-group-item-action" %>
    <%= link_to "Trocas", exchanges_path, class: "list-group-item list-group-item-action" %>
    <%= link_to "Serviços", services_path, class: "list-group-item list-group-item-action" %>
    <%= link_to 'Vitrine de Serviços', marketplace_services_path, class: "list-group-item list-group-item-action" %>
  </div>
</div>