<style>
  /* Estilização da Topbar */
  .navbar {
    background-color: #242038; /* Dark Purple */
    padding: 1rem;
    z-index: 1030; /* Para garantir que a topbar fique acima do conteúdo */
    width: 100%;
  }

  .navbar a {
    color: #F7ECE1; /* Linen */
    font-size: 1.1rem;
  }

  .navbar a:hover {
    color: #9067C6; /* Amethyst */
    text-decoration: none;
  }

  .btn-primary {
    background-color: #9067C6; /* Amethyst */
    border-color: #9067C6;
  }

  .btn-primary:hover {
    background-color: #8D86C9; /* Tropical Indigo */
    border-color: #8D86C9;
  }

  .btn-danger-topbar {
    background-color: #D9534F;
    color: #F7ECE1; /* Linen */
  }

  .btn-danger-topbar:hover {
    background-color: #C9302C;
    color: #F7ECE1; /* Linen */
  }

  /* Estilo para o texto de boas-vindas */
  .welcome-text {
    color: #F7ECE1; /* Linen */
    font-size: 1.2rem;
    margin-left: 10px;
  }
</style>

<nav class="navbar navbar-expand-lg d-flex justify-content-between fixed-top">
  <div class="d-flex align-items-center">
    <button class="btn btn-primary" id="menu-toggle">
      <i class="bi bi-list"></i>
    </button>
    <span class="welcome-text ms-3">Seja Bem-vindo, <%= current_user.name %></span>
  </div>

  <ul class="navbar-nav">
    <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn btn-danger-topbar btn-lg' %>
  </ul>
</nav>
