<style>
  /* Estilos principais para cores do sistema */
  body {
    background-color: #CAC4CE; /* french gray */
    color: #242038; /* Dark Purple */
  }

  .navbar {
    background-color: #242038; /* Dark Purple */
    padding: 1rem;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .navbar a {
    color: #F7ECE1; /* Linen */
    font-size: 1.2rem;
    margin-left: 1rem;
  }

  .navbar a:hover {
    color: #CAC4CE; /* French Gray */
  }

  .icon-large {
    font-size: 4rem;
    color: #8D86C9; /* Tropical Indigo */
  }

  .card {
    background-color: #FFF;
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    height: 600px;
  }

  .btn-primary {
    background-color: #9067C6; /* Amethyst */
    border-color: #9067C6;
  }

  .btn-primary:hover {
    background-color: #8D86C9; /* Tropical Indigo */
    border-color: #8D86C9;
  }

  .btn-success {
    background-color: #8D86C9; /* Tropical Indigo */
    border-color: #8D86C9;
  }

  .btn-success:hover {
    background-color: #9067C6; /* Amethyst */
    border-color: #9067C6;
  }

  h1, .lead {
    color: #242038; /* Dark Purple */
  }

  p.display-8 {
    color: #242038; /* French Gray */
    font-size: 1.2rem;
  }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="#">Escambo House</a>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Registrar', new_user_registration_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Corpo principal da página -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <i class="bi bi-houses icon-large"></i>
          <h1 class="display-5">Bem-vindo ao Escambo House</h1>
          <p class="lead">Troque serviços com outros moradores do seu condomínio!</p>
          <p class="display-8">Condomínio: Lírios II</p>

          <div class="d-flex flex-row align-items-center gap-3">
            <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary btn-lg mt-3' %> 
            <%= link_to 'Registrar', new_user_registration_path, class: 'btn btn-success btn-lg mt-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
