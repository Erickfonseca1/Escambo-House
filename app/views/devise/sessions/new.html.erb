<style>
  body {
    background-color: #CAC4CE; /* Linen */
    color: #242038; /* Dark Purple */
  }

  .login-card {
    background-color: #FFF; /* Linen */
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    border-radius: 8px;
  }

  h2 {
    color: #242038; /* Dark Purple */
  }

  .form-label {
    color: #242038; /* Dark Purple */
    font-weight: bold;
  }

  .form-control {
    border: 1px solid #CAC4CE; /* French Gray */
    border-radius: 4px;
    padding: 0.75rem;
  }

  .form-control:focus {
    border-color: #9067C6; /* Amethyst */
    box-shadow: 0 0 0 0.2rem rgba(144, 103, 198, 0.25); /* Amethyst */
  }

  .btn-primary {
    background-color: #9067C6; /* Amethyst */
    border-color: #9067C6;
  }

  .btn-primary:hover {
    background-color: #8D86C9; /* Tropical Indigo */
    border-color: #8D86C9;
  }

  .form-check-label {
    color: #242038; /* Dark Purple */
  }

  .login-links a {
    color: #9067C6; /* Amethyst */
    text-decoration: none;
  }

  .login-links a:hover {
    color: #8D86C9; /* Tropical Indigo */
  }

  .error-message {
    color: #FF0000; /* Red */
    font-size: 0.875rem;
  }
</style>

<div class="container mt-5" data-controller="validation">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="login-card">
        <h2 class="text-center">Log in</h2>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", data: { action: "validation#validateEmail", validation_target: "email"} %>
            <span class="error-message" data-validation-target="emailError"></span>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", data: { action: "input->validation#validatePassword", validation_target: "password"} %>
            <span class="error-message" data-validation-target="passwordError"></span>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="login-links mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
