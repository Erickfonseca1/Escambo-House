<style>
  body {
    background-color: #CAC4CE; /* Linen */
    color: #242038; /* Dark Purple */
  }

  .signup-card {
    background-color: #FFF; /* Linen */
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    border-radius: 8px;
  }

  h2 {
    color: #242038; /* Dark Purple */
  }

  .form-label {
    color: #242038; /* Dark Purple */
    font-weight: bold;
  }

  .form-control {
    border: 1px solid #CAC4CE; /* French Gray */
    border-radius: 4px;
    padding: 0.75rem;
  }

  .form-control:focus {
    border-color: #9067C6; /* Amethyst */
    box-shadow: 0 0 0 0.2rem rgba(144, 103, 198, 0.25); /* Amethyst */
  }

  .btn-primary {
    background-color: #9067C6; /* Amethyst */
    border-color: #9067C6;
  }

  .btn-primary:hover {
    background-color: #8D86C9; /* Tropical Indigo */
    border-color: #8D86C9;
  }

  .login-links a {
    color: #9067C6; /* Amethyst */
    text-decoration: none;
  }

  .login-links a:hover {
    color: #8D86C9; /* Tropical Indigo */
  }

  .error-message {
    color: #FF0000; /* Red */
    font-size: 0.875rem;
  }
</style>

<div class="container mt-5" data-controller="validation">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="signup-card">
        <h2 class="text-center">Registrar</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", data: { action: "validation#validateEmail", validation_target: "email" } %>
          <span class="error-message" data-validation-target="emailError"></span>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, "Nome", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :address, "Endereço", class: "form-label" %>
            <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", data: { action: "input->validation#validatePassword", validation_target: "password"}%>
            <span class="error-message" data-validation-target="passwordError"></span>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", class: "form-control", data: { action: "input->validation#validatePasswordConfirmation", validation_target: "passwordConfirmation" } %>
          <span class="error-message" data-validation-target="passwordConfirmationError"></span>
          </div>

          <div class="d-grid">
            <%= f.submit "Registrar", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="login-links mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
